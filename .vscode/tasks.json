{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
				"${fileDirname}/${fileBasenameNoExtension}.out",
				"-std=c++11"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "execute",
            "command": "cd ${fileDirname} && ./${fileBasenameNoExtension}.out",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}